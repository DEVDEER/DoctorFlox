<Window x:Class="devdeer.DoctorFlox.Ui.WpfSample.CollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:devdeer.DoctorFlox.Ui.WpfSample"
        mc:Ignorable="d"
        Title="CollectionWindow" Height="300" Width="600"
        DataContext="{Binding CollectionViewModel, Source={StaticResource Locator}}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid ItemsSource="{Binding ItemsView}" IsSynchronizedWithCurrentItem="True" />
    </Grid>
</Window>